<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dingn.rubikscube" version="1.0.0" xmlns="http://www.w3.org/ns/widgets"
  android-packageName="com.dingn.rubikscube"
  android-activityName="Rubikscube"
  >
    <name>Rubiks Cube</name>
    <description>
        3D Rubik's Cube and Solvers.
    </description>
    <author email="ligang@dingn.com" href="http://dingn.com">
        Ligang Wang
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
     <icon src="www/img/logo.png" />
</widget>
